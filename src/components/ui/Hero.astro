---
import { Image } from 'astro:assets'

import SocialIcons from './SocialIcons.astro'
import UMCLogo from '@/assets/umc-amsterdam-logo-short.png'


const {fullName, title, institute, profilePicture} = Astro.props
---
<div class='flex-1'>
  <h1 class='text-4xl font-bold mb-4'>
    Welcome! I'm <span class='text-blue-900'>{fullName}</span>
  </h1>
  <div class="flex items-center gap-2 text-xl font-bold text-blue-900 mb-4">
  <span>
    {title}
    {institute ? ` at ${institute}` : ''}
  </span>
  <Image
    src={UMCLogo}
    alt="UMC Amsterdam logo"
    class="w-8 h-8 object-contain"
  />
</div>

  <p class='text-lg mb-6'>
    Brief impactful description of your research focus and academic mission.
    Highlight your key contributions and areas of expertise.
  </p>
  <div class='flex gap-4'>
    <SocialIcons colorClass="text-blue-900" />
  </div>
</div>
<div class="w-64 h-64 rounded-full border-4 border-blue-900 p-[2px] shadow-lg overflow-hidden">
  <Image
    src={profilePicture}
    alt={fullName}
    class="w-full h-full rounded-full object-cover"
  />
</div>
