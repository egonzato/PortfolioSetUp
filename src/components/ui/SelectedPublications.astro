---
const { selectedP = [] } = Astro.props
import { Image } from 'astro:assets'
---

<section class="py-12 border-t">
  <h2 class="text-4xl font-bold mb-4 text-blue-900">News</h2>
  <ul class="space-y-2">
    {selectedP.map(({ image, contentHtml }) => (
      <li class="grid grid-cols-[150px_1fr] gap-8">
        <div class="text-xl font-bold-sans text-blue-900">
            <Image
                src={image}
                alt="UMC Amsterdam logo"
                class="w-8 h-8 object-contain"
            />
        </div>
        <div class="text-lg mb-6 font-sans" set:html={contentHtml} />
      </li>
    ))}
  </ul>
</section>
