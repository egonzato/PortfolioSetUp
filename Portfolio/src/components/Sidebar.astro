---
const links = [
  { href: '#about', label: 'Chi sono' },
  { href: '#projects', label: 'Progetti' },
  { href: '#skills', label: 'Competenze' },
  { href: '#contact', label: 'Contatti' },
];
---
<nav class="fixed md:relative bg-gray-900 text-white w-full md:w-60 h-16 md:h-screen flex md:flex-col justify-around md:justify-start md:gap-4 p-4">
  <ul class="flex md:flex-col gap-4 md:mt-8 w-full justify-around md:justify-start">
    {links.map(({ href, label }) => (
      <li><a href={href} class="hover:underline text-sm md:text-base">{label}</a></li>
    ))}
  </ul>
</nav>
